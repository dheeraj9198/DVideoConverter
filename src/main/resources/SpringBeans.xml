<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Properties File -->
    <bean id="propertyConfigurator"
          class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <description>
            Configurer that replaces ${...} placeholders with values
            from a properties file
        </description>
        <property name="locations">
            <list>
                <value>classpath:config.properties</value>
            </list>
        </property>
    </bean>

    <bean id="appConfig" class="DesktopTranscoder.AppConfig">
        <property name="apiUrl" value="${apiUrl}"></property>
        <property name="commonFolder" value="${commonFolder}"></property>
    </bean>
</beans>